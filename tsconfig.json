{
  "moduleResolution": "node",
  "target": "es6",
  "module": "commonjs",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "src/**/*.test.ts"],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
      "outDir": "bin",
      "resolveJsonModule": true,
      "noImplicitUseStrict": true,
      "downlevelIteration": true
  }
}